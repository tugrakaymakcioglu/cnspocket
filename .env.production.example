# Production Environment Variables Template
# Copy this file to .env.production and fill in your production values

# Database - PostgreSQL Production
DATABASE_URL="postgresql://notvarmi_user:YOUR_PRODUCTION_PASSWORD@localhost:5432/notvarmi_db?schema=public&connection_limit=10&pool_timeout=20"

# NextAuth Production
NEXTAUTH_URL="https://www.notvarmı.com"
NEXTAUTH_SECRET="YOUR_PRODUCTION_SECRET_FROM_OPENSSL"

# Optional: Email for password reset (future feature)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-production-email@gmail.com"
SMTP_PASS="your-production-app-password"
SMTP_FROM='"NotVarmı" <noreply@notvarmı.com>'

# Node Environment
NODE_ENV="production"

