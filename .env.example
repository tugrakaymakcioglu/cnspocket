# Database
# PostgreSQL connection string format:
# postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://notvarmi_user:your_password@localhost:5432/notvarmi_db?schema=public
DATABASE_URL="postgresql://your_user:your_password@your_host:5432/your_database?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="https://www.notvarmi.com"
# Generate a secure secret key using: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-use-openssl-to-generate"

# Google Analytics - Production only
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-TRN468YVXT"

# Google Search Console - Site Verification
# Google Search Console'dan aldığınız verification kodunu buraya ekleyin
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION="your-verification-code-here"

# Email (SMTP) Settings - OPTIONAL - For password reset feature (planned for future)
# Gmail için App Password almanız gerekir: https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password-here"
SMTP_FROM='"NotVarmı" <your-email@gmail.com>'
