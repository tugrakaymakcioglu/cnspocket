{
    "name": "notvarmi-app",
    "script": "npm",
    "args": "start",
    "instances": 1,
    "exec_mode": "cluster",
    "env": {
        "NODE_ENV": "production",
        "PORT": 3000
    },
    "error_file": "/var/log/notvarmi/error.log",
    "out_file": "/var/log/notvarmi/out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "autorestart": true,
    "max_restarts": 10,
    "min_uptime": "10s",
    "max_memory_restart": "1G",
    "watch": false,
    "ignore_watch": [
        "node_modules",
        ".next",
        "logs"
    ],
    "kill_timeout": 5000
}